<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.recycler.recipesrecyclerview">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="me.recycler.recipesrecyclerview.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="me.recycler.recipesrecyclerview.RecipeMethodActivity"
            android:parentActivityName="me.recycler.recipesrecyclerview.MainActivity">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value="me.recycler.recipesrecyclerview.MainActivity"/>
        </activity>
    </application>

</manifest>